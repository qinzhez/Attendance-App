<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.attendU.dev.microservices.checkin.CheckinMapper">

	<insert id="checkin" parameterType="com.attendU.dev.microservices.bean.Checkin">
		insert into checkin (rid, aid, uid)
		values (#{rid}, #{aid}, #{uid})
	</insert>
	
	<select id="checkinInfo" resultType="com.attendU.dev.microservices.bean.Checkin">
		select * from checkin 
		where rid=#{rid} and aid=#{aid} and uid=#{uid}
	
	</select>
</mapper>